{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",   // Source files in `src/`
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "lib": ["ESNext", "DOM"],
    "types": ["node", "electron"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
